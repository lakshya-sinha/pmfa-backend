<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      header {
        background: #020617;
        padding: 1rem;
        border-bottom: 1px solid rgba(14, 165, 255, 0.2);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      header h1 {
        margin: 0;
        font-size: 1.2rem;
        color: #0ea5ff;
      }
      header span {
        font-size: 0.85rem;
        color: #9fdfff;
      }

      main {
        flex: 1;
        padding: 1.5rem;
      }

      .card {
        background: #0a0f1a;
        border: 1px solid rgba(14, 165, 255, 0.15);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        text-align: center;
      }

      .graph {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
      }

      .circular-chart {
        max-width: 120px;
        max-height: 120px;
      }

      .circle-bg {
        fill: none;
        stroke: rgba(14, 165, 255, 0.15);
        stroke-width: 3.8;
      }

      .circle {
        fill: none;
        stroke-width: 2.8;
        stroke: #0ea5ff;
        stroke-linecap: round;
        transition: stroke-dasharray 0.6s ease;
      }

      .percentage {
        fill: #0ea5ff;
        font-family: monospace;
        font-size: 0.5em;
        text-anchor: middle;
      }

      @media (max-width: 600px) {
        main {
          padding: 1rem;
        }
        header h1 {
          font-size: 1rem;
        }
      }
      body {
        margin: 0;
        font-family: "SFMono-Regular", Menlo, monospace;
        background: #000;
        color: #0ea5ff;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        background: #020617;
        padding: 1rem;
        border-bottom: 1px solid rgba(14, 165, 255, 0.2);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      header h1 {
        margin: 0;
        font-size: 1.2rem;
        color: #0ea5ff;
      }

      header button {
        background: transparent;
        border: 1px solid #0ea5ff;
        color: #0ea5ff;
        padding: 6px 12px;
        border-radius: 6px;
        cursor: pointer;
      }

      main {
        flex: 1;
        display: grid;
        grid-template-columns: 220px 1fr;
      }

      nav {
        background: #05060a;
        border-right: 1px solid rgba(14, 165, 255, 0.15);
        padding: 1rem;
      }

      nav a {
        display: block;
        padding: 0.5rem;
        color: #9fdfff;
        text-decoration: none;
        border-radius: 4px;
        margin-bottom: 6px;
      }

      nav a:hover {
        background: rgba(14, 165, 255, 0.1);
      }

      section {
        padding: 1.5rem;
      }

      .card {
        background: #0a0f1a;
        border: 1px solid rgba(14, 165, 255, 0.15);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        margin-left: 1rem;
        margin-top: 1rem;
      }

      .logbox {
        background: #050a14;
        border: 1px solid rgba(14, 165, 255, 0.1);
        height: 200px;
        overflow-y: auto;
        font-size: 0.85rem;
        padding: 0.5rem;
      }

      /* Responsive Styles */
      @media (max-width: 768px) {
        main {
          display: flex;
          flex-direction: column;
        }

        nav {
          display: flex;
          flex-wrap: wrap;
          border-right: none;
          border-bottom: 1px solid rgba(14, 165, 255, 0.15);
        }

        nav a {
          flex: 1 1 50%;
          text-align: center;
          margin-bottom: 0;
        }
      }

      @media (max-width: 480px) {
        header h1 {
          font-size: 1rem;
        }

        nav a {
          flex: 1 1 100%;
          font-size: 0.9rem;
          padding: 0.75rem;
        }

        section {
          padding: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Admin Dashboard</h1>
      <div style="display:flex;gap:8px;align-items:center;">
        <button id="notificationToggleBtn">Enable Notifications</button>
        <button id="notificationResetBtn">Reset Notifications</button>
        <button id="notificationTestBtn">Send Test Push</button>
        <button id="logout">Logout</button>
      </div>
    </header>

    <main>
      <nav>
        <a href="/admin/trialStudents">Trial Student Logs</a>
        <a href="/admin/contactDetails">Contact Us Logs</a>
        <a href="/admin/settings">Setting</a>
      </nav>
      <div class="content">
        <div class="card">
          <h2>Pending Trial Students</h2>
          <div class="graph">
            <svg viewBox="0 0 36 36" class="circular-chart">
              <path
                class="circle-bg"
                d="M18 2.0845
              a 15.9155 15.9155 0 0 1 0 31.831
              a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="circle"
                stroke-dasharray="<%= Math.min(trialCount,100) %>, 100"
                d="M18 2.0845
              a 15.9155 15.9155 0 0 1 0 31.831
              a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <text x="18" y="20.35" class="percentage"><%= trialCount %></text>
            </svg>
          </div>
        </div>
        <div class="card">
          <h2>Pending Contact Students</h2>
          <div class="graph">
            <svg viewBox="0 0 36 36" class="circular-chart">
              <path
                class="circle-bg"
                d="M18 2.0845
              a 15.9155 15.9155 0 0 1 0 31.831
              a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="circle"
                stroke-dasharray="<%= Math.min(ContactCount,100) %>, 100"
                d="M18 2.0845
              a 15.9155 15.9155 0 0 1 0 31.831
              a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <text x="18" y="20.35" class="percentage">
                <%= ContactCount %>
              </text>
            </svg>
          </div>
        </div>
      </div>
    </main>

    <script>
      document.getElementById("logout").onclick = async () => {
        await fetch("/logout", { method: "GET", credentials: "same-origin" });
        window.location.href = "/login";
      };

  // checkAuth() was removed / not defined in this file. If you need auth checks on the client,
  // implement them here. For now we don't call any undefined functions.
    </script>
    <script src="/js/notifications.js"></script>
    <script>
      document.getElementById('notificationTestBtn').onclick = async () => {
        try {
          const resp = await fetch('/admin/testPush', { method: 'POST', credentials: 'same-origin', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ title: 'Admin Test', body: 'This is a test from the dashboard' }) });
          const data = await resp.json();
          if (data && data.ok) alert('Test push sent'); else alert('Failed to send test push');
        } catch (e) {
          console.error('Test push error', e);
          alert('Test push error: ' + e.message);
        }
      };
    </script>
  </body>
</html>
