<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Trial Students — Admin</title>
    <style>
      :root {
        --bg: #000;
        --panel: #05060a;
        --accent: #0ea5ff;
        --muted: #091321;
        --card: #0a0f1a;
        --mono: "SFMono-Regular", Menlo, monospace;
      }
      .delete {
        padding: 8px 14px;
        text-decoration: none;
        color: grey;
        border: 1px solid maroon;
      }
      .contact {
        padding: 8px 14px;
        text-align: none;
        color: grey;
        border: 1px solid aqua;
      }
      td {
        margin-top: 4px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        background: linear-gradient(180deg, #000, #001026);
        color: #cfefff;
        font-family: var(--mono);
        -webkit-font-smoothing: antialiased;
      }
      .wrap {
        max-width: 1100px;
        margin: 28px auto;
        padding: 18px;
      }
      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 18px;
      }
      .title {
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--accent);
        box-shadow: 0 0 12px rgba(14, 165, 255, 0.35);
      }
      h1 {
        margin: 0;
        font-size: 1.15rem;
        color: var(--accent);
      }
      .sub {
        font-size: 13px;
        color: #9fdfff;
        opacity: 0.85;
      }

      .panel {
        background: linear-gradient(
          180deg,
          rgba(4, 6, 12, 0.8),
          rgba(3, 5, 10, 0.65)
        );
        border-radius: 8px;
        padding: 14px;
        border: 1px solid rgba(14, 165, 255, 0.06);
        box-shadow: 0 8px 30px rgba(2, 6, 15, 0.6);
      }

      /* table style for desktop */
      .table-wrap {
        overflow: auto;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        color: #dff8ff;
      }
      thead th {
        text-align: left;
        padding: 10px 12px;
        background: rgba(14, 165, 255, 0.04);
        font-weight: 600;
        color: var(--accent);
        border-bottom: 1px solid rgba(14, 165, 255, 0.06);
      }
      tbody td {
        padding: 10px 12px;
        border-bottom: 1px dashed rgba(14, 165, 255, 0.03);
      }
      tbody tr:hover td {
        background: rgba(14, 165, 255, 0.02);
      }

      .small-note {
        font-size: 13px;
        color: #9fdfff;
        opacity: 0.8;
        margin-top: 8px;
      }

      /* card list for small screens */
      .cards {
        display: none;
        gap: 12px;
      }
      .card {
        background: var(--card);
        border: 1px solid rgba(14, 165, 255, 0.08);
        padding: 12px;
        border-radius: 8px;
      }
      .card .row {
        display: flex;
        justify-content: space-between;
        padding: 6px 0;
        border-bottom: 1px dashed rgba(14, 165, 255, 0.02);
      }
      .card .row:last-child {
        border-bottom: none;
      }

      /* actions / search */
      .toolbar {
        display: flex;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 12px;
      }
      .search {
        padding: 8px 10px;
        border-radius: 6px;
        border: 1px solid rgba(14, 165, 255, 0.08);
        background: transparent;
        color: #dff8ff;
        font-family: var(--mono);
      }
      .btn {
        padding: 8px 10px;
        border-radius: 6px;
        border: 1px solid var(--accent);
        background: transparent;
        color: var(--accent);
        cursor: pointer;
        font-family: var(--mono);
      }

      /* responsive breakpoints */
      @media (max-width: 800px) {
        table {
          display: none;
        }
        .cards {
          display: flex;
          flex-direction: column;
        }
      }

      @media (max-width: 420px) {
        .wrap {
          padding: 12px;
          margin: 14px auto;
        }
        .title h1 {
          font-size: 1rem;
        }
        .search {
          flex: 1;
          min-width: 120px;
        }
      }
    </style>
  </head>
  <body>
    <div class="wrap">
      <div class="header">
        <div class="title">
          <div class="dot" aria-hidden="true"></div>
          <div>
            <h1>Trial Students</h1>
            <div class="sub">
              List of registered trial students — rendered server-side
            </div>
          </div>
        </div>

        <div>
          <span class="small-note">Logged in as: <strong>admin</strong></span>
        </div>
      </div>

      <div class="panel">
        <div class="toolbar">
          <input
            class="search"
            id="search"
            placeholder="Search by name / center / phone"
          />
          <button class="btn" id="refreshBtn">Refresh</button>
          <a href="/admin/dashboard">Back to Dashboard</a>
          <div style="flex: 1"></div>
          <span style="font-size: 13px; color: #9fdfff; opacity: 0.8"
            ><%= students.length %> record<%= students.length!==1 ? 's' : ''
            %></span
          >
        </div>

        <!-- Desktop table -->
        <div class="table-wrap">
          <table role="table" id="studentsTable">
            <thead>
              <tr>
                <th>Player Name</th>
                <th>Phone</th>
                <th>Center</th>
                <th>Date of Birth</th>
                <th>School</th>
                <th>ID</th>
                <th>Operatoins</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach(function(s){ %>
              <tr>
                <td><%= s.PlayerName %></td>
                <td><%= s.PhoneNumber %></td>
                <td><%= s.SelectedCenter %></td>
                <td><%= s.DateOfBirth %></td>
                <td><%= s.SchoolName %></td>
                <td
                  style="
                    font-family: monospace;
                    font-size: 12px;
                    color: #9fdfff;
                  "
                >
                  <%= s._id %>
                </td>
                <td>
                  <a
                    class="delete"
                    href="/admin/trialStudents/delete/<%= s._id %>"
                    >Delete</a
                  >
                  <a
                    href="https://wa.me/+91<%= s.PhoneNumber %>"
                    style="text-decoration: none"
                    ;
                    class="contact"
                    >Contact</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- Mobile cards -->
        <div class="cards" id="cardsList" style="margin-top: 12px">
          <% students.forEach(function(s){ %>
          <div
            class="card"
            data-name="<%= s.PlayerName.toLowerCase() %>"
            data-center="<%= s.SelectedCenter.toLowerCase() %>"
            data-phone="<%= String(s.PhoneNumber) %>"
          >
            <div class="row">
              <strong><%= s.PlayerName %></strong
              ><span style="font-family: monospace"><%= s.PhoneNumber %></span>
            </div>
            <div class="row">
              <span>Center</span><span><%= s.SelectedCenter %></span>
            </div>
            <div class="row">
              <span>D.O.B</span><span><%= s.DateOfBirth %></span>
            </div>
            <div class="row">
              <span>School</span><span><%= s.SchoolName %></span>
            </div>

            <div
              style="
                margin-top: 8px;
                font-size: 12px;
                color: #9fdfff;
                opacity: 0.85;
              "
            >
              ID: <span style="font-family: monospace"><%= s._id %></span>
            </div>
            <div class="row">
              <a
                href="https://wa.me/<%=s.PhoneNumber%>"
                style="text-decoration: none"
                class="contact"
                >Contact</a
              >
            </div>
            <div class="row">
              <a href="/admin/trialStudents/delete/<%= s._id %>" class="delete"
                >Delete</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script>
      // Basic client-side search/filter (works for both table and cards)
      const search = document.getElementById("search");
      const table = document.getElementById("studentsTable");
      const cards = document.getElementById("cardsList");

      function filter(value) {
        value = value.trim().toLowerCase();
        // filter table rows if present
        if (table) {
          const rows = table.querySelectorAll("tbody tr");
          rows.forEach((r) => {
            const txt = r.textContent.toLowerCase();
            r.style.display = txt.includes(value) ? "" : "none";
          });
        }
        // filter cards
        if (cards) {
          const cs = cards.querySelectorAll(".card");
          cs.forEach((c) => {
            const name = c.getAttribute("data-name") || "";
            const center = c.getAttribute("data-center") || "";
            const phone = c.getAttribute("data-phone") || "";
            const ok =
              name.includes(value) ||
              center.includes(value) ||
              phone.includes(value);
            c.style.display = ok ? "" : "none";
          });
        }
      }

      search.addEventListener("input", (e) => filter(e.target.value));
      document
        .getElementById("refreshBtn")
        .addEventListener("click", () => location.reload());
    </script>
  </body>
</html>
